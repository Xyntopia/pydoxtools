sudo apt-get install curl autoconf automake libtool pkg-config 

git clone https://github.com/openvenues/libpostal
cd libpostal
make distclean
./bootstrap.sh
# need a few GB of space in datadir
./configure --datadir=/run/user/1000/
make -j4
sudo make install
#sudo checkinstall make install #install as debian package

# On Linux it's probably a good idea to run
sudo ldconfig
